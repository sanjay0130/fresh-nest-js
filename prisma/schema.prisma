generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  firstname   String
  lastname    String
  email       String     @unique
  phone       String?
  category    Category
  description String?
  active      Boolean     @default(true)

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("users") // table name in DB
}

enum Category {
  Startup
  Founder
  BusinessProvider
  Mentor
}
